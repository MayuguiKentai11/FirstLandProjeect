@model EntityLayer.Sale
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<link href="~/Content/MauiStoreStyless.css" rel="stylesheet" />*@
    @*@Styles.Render("~/Content/css")*@
    <title>ReportPDF</title>
    <style>
        .contenedor {
            width: 900px !important;
            height: 842px !important;
            margin: auto;
        }

        body {
            font-family: Arial, Helvetica, sans-serif
        }

        p.title {
            font-weight: bold;
        }

        p.title2 {
            font-weight: bold;
            color: #03A99F;
            font-size: 20px;
        }

        p.text {
            font-size: 15px;
            font-weight: 100;
            color: #858585;
        }

        p {
            margin: 0px
        }

        .tbth {
            text-align: left;
        }

        table.tbproductos {
            border-collapse: separate;
            border-spacing: 4px;
        }

        table.tbproductos thead tr th {
            background-color: #03A99F;
            padding: 10px;
            font-size: 15px;
            color: white;
        }

        table.tbproductos tbody tr td {
            padding: 10px;
        }

        .item {
            font-size: 15px;
            font-weight: 100;
            color: #757575;
        }

        .item-2 {
            font-size: 15px;
            font-weight: bold;
            color: #757575;
        }

        .item-3 {
            font-size: 15px;
            font-weight: bold;
            background-color: #03A99F;
            color: white;
        }

        .td-item {
            border-bottom: 2px solid #E8E8E8 !important;
        }
    </style>
</head>

<body>
    <div class="contenedor">
        <table style="width:100%">
            <tr>
                <td>
                    <img src="~/Content/images/logo.png"/>
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr><td><p class="title2">ID Transacción</p></td></tr>
                        <tr><td>@Model.IdTransaction</td></tr>
                    </table>
                </td>
            </tr>
        </table>
        <br />
        <table style="width:100%">
            <tr>
                <td>
                    <table>
                        <tr>
                            <td>
                                <p class="title">SUPERMARKET MAUI</p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="text">
                                    Dirección: En los Andes PAPA!
                                </p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="text">Correo: mauriciorojasanchez@gmail.com</p>
                            </td>
                        </tr>
                    </table>
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr>
                            <td>
                                <p class="title">CLIENTE</p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="text">@Model.contactSale</p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="text">@Model.telephoneClient</p>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

        </table>
        <br />
        <br />
        <table class="tbproductos" style="width:100%">
            <thead>
                <tr>
                    <th class="tbth">Producto</th>
                    <th class="tbth" style="width:130px">Cantidad</th>
                    <th class="tbth" style="width:130px">Precio</th>
                    <th class="tbth" style="width:130px">Total</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.details)
                    {
                        <tr>
                            <td class="td-item"><p class="item">@item.IdProduct.nameProduct</p></td>
                            <td class="td-item"><p class="item">@item.orderProduct</p></td>
                            <td class="td-item"><p class="item">@item.IdProduct.priceProduct</p></td>
                            <td style="background-color:#EDF6F9"><p class="item">@item.totalProduct</p></td>
                        </tr>
                    }
                }
                <tr>
                    <td colspan="2" rowspan="3" valign="bottom">

                    </td>
                    <td class="td-item">
                        <p class="item-2">Sub Total</p>
                    </td>
                    <td class="item-3">
                        <p>@Model.subTotal</p>
                    </td>
                </tr>
                <tr>
                    <td class="td-item">
                        <p class="item-2">
                            IGV
                        </p>
                    </td>
                    <td class="item-3">
                        <p>@Model.IGV</p>
                    </td>
                </tr>
                <tr>
                    <td class="item-3">
                        <p>Total</p>
                    </td>
                    <td class="item-3">
                        <p>@Model.totalSaleCost</p>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>


    @*@Scripts.Render("~/bundles/complements")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")*@
</body>
</html>
